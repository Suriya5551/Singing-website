extends base.pug 

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    div.container
        H1 Contact Us
        form(action="/contact", method="post", class="form")
            input(type="text", name="name", class="input", placeholder="Enter your name")
            input(type="number", name="phone", class="input", placeholder="Enter your phone no")
            input(type="email", name="email", class="input", placeholder="Enter your email ID")
            input(type="text", name="concern", class="input", placeholder="Enter your concern")
            button(class="btn")
                |submit

